<Page x:Class="WhatTimeIsIt.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WhatTimeIsIt.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Settings"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="25" />
        </Grid.ColumnDefinitions>

        <!-- Region Row 0, Clocks -->
        <ListView Name="SourceClocks" Grid.Row="0" Grid.Column="0" ItemsSource="{Binding ClocksAvailable}" SelectionChanged="ClocksAvailable_SelectionChanged" />
        <Grid Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <Button Content="--&gt;" IsEnabled="{Binding ClockAddEnabled}" Click="ClockAdd_Click" />
                <Button Content="&lt;--" IsEnabled="{Binding ClockRemoveEnabled}" Click="ClockRemove_Click" />
            </StackPanel>
        </Grid>
        <ListView Grid.Row="0" Grid.Column="2" ItemsSource="{Binding Clocks}" SelectionChanged="Clocks_SelectionChanged" />
        <Grid Grid.Row="0" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <Button Content="/\" IsEnabled="{Binding ClockUpEnabled}" />
                <Button Content="\/" IsEnabled="{Binding ClockDownEnabled}" />
            </StackPanel>
        </Grid>
        <!-- EndRegion -->

        <!-- Region Row 2, Comparisons -->
        <ListView Name="SourceConversions" Grid.Row="2" Grid.Column="0" ItemsSource="{Binding ConversionsAvailable}" SelectionChanged="ConversionsAvailable_SelectionChanged" />
        <Grid Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <Button Content="--&gt;" IsEnabled="{Binding ConversionAddEnabled}" Click="ConversionAdd_Click" />
                <Button Content="&lt;--" IsEnabled="{Binding ConversionRemoveEnabled}" Click="ConversionRemove_Click" />
            </StackPanel>
        </Grid>
        <ListView Grid.Row="2" Grid.Column="2" ItemsSource="{Binding Conversions}" SelectionChanged="Conversions_SelectionChanged" />
        <Grid Grid.Row="2" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <Button Content="/\" IsEnabled="{Binding ConversionUpEnabled}" />
                <Button Content="\/" IsEnabled="{Binding ConversionDownEnabled}" />
            </StackPanel>
        </Grid>
        <!-- EndRegion -->
        
        <!-- Region Row 4, Buttons -->
        <Grid Grid.Row="4" Grid.ColumnSpan="4">
            <Button HorizontalAlignment="Left" Width="75" Background="#FF5555" Click="Cancel_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/WhatTimeIsIt;component/Resources/ic_thumb_down_black_48dp.png" />
                    <TextBlock Text="Cancel" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Button HorizontalAlignment="Right" Width="75" Background="#55FF55" Click="Save_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/WhatTimeIsIt;component/Resources/ic_thumb_up_black_48dp.png" />
                    <TextBlock Text="Save" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </Grid>
        <!-- EndRegion -->
    </Grid>
</Page>
